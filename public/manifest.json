{
  "manifest_version": 2,

  "name": "Copy Clean URL",
  "description": "Remove junk from URL and copy clean URL to clipboard",
  "version": "1.0",

  "options_page": "options.html",

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/16.png",
      "32": "images/32.png",
      "48": "images/48.png",
      "128": "images/128.png"
    }
  },

  "background": {
    "scripts": ["js/vendor.js", "js/background.js"],
    "persistent": false
  },

  "permissions": ["storage", "activeTab", "clipboardWrite"],

  "icons": {
    "16": "images/16.png",
    "32": "images/32.png",
    "48": "images/48.png",
    "128": "images/128.png"
  }
}
